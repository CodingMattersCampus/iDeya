<?xml version="1.0"?>
<ruleset name="Zend Framework Coding Standard">
    <description>Zend Framework coding standard</description>
    <rule ref="./vendor/zendframework/zend-coding-standard/ruleset.xml"/>

   <!-- Paths to check -->
    <file>app</file>
    <file>tests</file>
    <file>modules</file>
    <exclude-pattern>modules/*/Database/*</exclude-pattern>
    <exclude-pattern>modules/*/Resources/*</exclude-pattern>
    <exclude-pattern>modules/*/*.json</exclude-pattern>
    <exclude-pattern>modules/*/*.js</exclude-pattern>
    <exclude-pattern>modules/*/Routes/*.php</exclude-pattern>
</ruleset>