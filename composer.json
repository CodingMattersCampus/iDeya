{
    "name": "codingmatters/ideya",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.3.1",
        "barryvdh/laravel-cors": "^0.11.3",
        "fideloper/proxy": "^4.1.0",
        "jeroennoten/laravel-adminlte": "^v1.25.1",
        "laravel/framework": "^v5.8.28",
        "nwidart/laravel-modules": "^5.0.1",
        "roave/security-advisories": "dev-master",
        "yajra/laravel-datatables-oracle": "^v9.4.1"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.2.2",
        "filp/whoops": "^2.4.1",
        "fzaninotto/faker": "^v1.8.0",
        "laravel/dusk": "^v5.2.0",
        "laravel/tinker": "^v1.0.8",
        "malukenho/mcbumpface": "^0.1.3",
        "mockery/mockery": "^1.2.2",
        "nunomaduro/collision": "^v2.1.1",
        "phpunit/phpunit": "^8.2.4",
        "sebastian/phpcpd": "^4.1.0",
        "staudenmeir/dusk-updater": "^v1.1.1",
        "zendframework/zend-coding-standard": "^1.0.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "modules/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check": [
            "@clear-all",
            "@cs-check",
            "@check-cpd",
            "@test"
        ],
        "clear-all": [
            "php artisan view:clear",
            "php artisan config:clear",
            "php artisan cache:clear"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "check-cpd": "phpcpd --exclude=vendor,public,bootstrap,config --fuzzy app tests database",
        "test": [
            "@unit-test",
            "@bdd-test" 
        ],
        "unit-test":"phpunit --verbose --testdox --color=always",
        "bdd-test": "php artisan dusk --testdox"
    }
}
